
<div id="first_section" class="homepage-section desktop-12 tablet-6 mobile-3">
<!--     <h2><a href="{{ collection.url }}">{{ 'layout.homepage.products_title' | t }}</a></h2>  -->
 {%if template != "index"%}
  {%if page.handle == "sale" and second_collection_link_text == "" %}
  <h2>Best Sellers of Mar 2019 | <a href="{{ page.metafields.template.link_location }}" style="text-decoration:underline;font-size:.6em;">{{ page.metafields.template.link_text }} &rsaquo;</a></h2>
  
  {%elsif page.handle == "sale-april-2019"  and collection.handle == "best-sellers-april-2019" %}
  	<h2>Best Sellers of April 2019 | <a href="/collections/wigs" style="text-decoration:underline;font-size:.8em;">Shop All Wigs &rsaquo;</a></h2>
	<!-- handle: {{page.handle}} -->  
 {%comment%}
   {%elsif page.handle == "sale-may-2019" and collection.handle == "changes-synthetic-wig-ellen-wille"%}
  <h2>Mother's Day Style Guide | <a href="/collections/new-arrivals"  style="text-decoration:underline;font-size:.8em;">Shop All New Arrivals &rsaquo;</a></h2>
	
 {%elsif page.handle == "sale-may-2019" and collection.handle != ""%}
  	{%endcomment%}
  {%elsif page.handle == "sale-june-2019" and  second_collection_link_text == "Shop Our Team Faves" %}
  
  <h2>{{ second_collection_link_text }}</h2>
  {%elsif page.metafields.template.link_text != ''  and second_collection_link_text == "" %}
  
  <h2><a href="{{ page.metafields.template.link_location }}" style="text-decoration:underline;">{{ page.metafields.template.link_text }}</a></h2>
  
  {%elsif second_collection_link_text  != ""%}
  <h2><a href="{{ second_collection_link_href }}" style="text-decoration:underline;">{{ second_collection_link_text }}</a></h2>
  {%else%}
  <h2><a href="{{ collection.url }}">Shop All {{ collection.title }} </a> <!-- | <span style="vertical-align:middle;font-size:1rem;"><a href="{{ collection.url }}">SHOP ALL &rsaquo;</a></span> --></h2>

  {%endif%}
 {%endif%}
{% if settings.homepage-collection == blank %}
  <div class="theme-instructions">
    <div class="onboard desktop-12 tablet-6 mobile-3">
      <h3>Home page - featured products</h3>
      You are seeing this message as you have enabled the Featured products section of your Home page options
      but have yet to choose a menu from the section titled: <strong>Home page - featured products</strong> and choose collection from the first product carousel dropdown.
      <br /><br />
      To configure this section go to the <a href="/admin/themes/43759171/editor">theme Customizer</a> and open the section named: <strong>Home page - featured products</strong>.
      <br /><br />
      Need more help? take a look at our <a target="_blank" href="http://support.undergroundmedia.co.uk/customer/portal/articles/2384534-home-page---featured-products">tutorial</a>.
    </div>
    <div class="theme-content">
      <div id="product-loop">
        {% for i in (1..6) %}
        <div class="product-index desktop-2 tablet-2 mobile-2" id="product-listing-{{ product.id }}" data-alpha="{{ product.title }}" data-price="{{ product.price }}">
          <div class="prod-image"><!-- here -->
            <img src="//cdn.shopify.com/s/images/themes/product-{{ forloop.index }}.png" alt="{{ image.alt }}" />
          </div>
          <div class="product-info"> 
            <div class="product-info-inner">
              <h3>Sample product title</h3>
              <div class="price">
                <div class="prod-price">9.99</div>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
  {% endif %}
  
  {% assign set_limit =  settings.homepage-product-limit%}
	{%if second_collection_limit != set_limit %}
			{% assign set_limit = second_collection_limit %}
	{%endif%}
  <div id="product-loop">      
{%if collection.handle == "new-arrivals"%}
{% assign set_limit = 4 %}
{%endif%}
    
    {% for product in collection.products limit: set_limit %}
    {%if product.handle == "wig-secure-accessory-amy-gibson" and  collection.handle == "new-arrivals"%}
	{%continue%}
    {%endif%}
    {% assign products-per-row = settings.products-per-row %}
    <div class="product-index {% if template == 'index' and settings.homepage-product-display == 'carousel' %}{% else %}{% if products-per-row == "6" %}desktop-2{% cycle ' first', '', '', '', '', ' last' %}{% elsif products-per-row == "4" %}desktop-3{% cycle ' first', '', '', ' last' %}{% elsif products-per-row == "3" %}desktop-4{% cycle ' first', '', ' last' %}{% elsif products-per-row == "5" %}desktop-fifth{% cycle ' first', '', '', '', ' last' %}{% elsif products-per-row == "2" %}desktop-6{% cycle ' first', ' last' %}{% endif %} tablet-half mobile-half{% endif %}" data-alpha="{{ product.title }}" data-price="{{ product.price }}">       
      	
		{% include 'product-listing' %}
    </div>
    {% endfor %}
  </div>  
  {%comment%}<!--begin end titles -->{%if page.handle == "sale-may-2019"%} <div style="clear:both;"><div style="float:right"><h2 style="border:none;margin:-20px 0px 50px 0px;"><a href="{{ second_collection_link_href }}" style="text-decoration:underline;font-size:.8em;">{{ second_collection_link_text }} &rsaquo;</a></h2></div></div>   {%endif%}{%endcomment%}
</div> 