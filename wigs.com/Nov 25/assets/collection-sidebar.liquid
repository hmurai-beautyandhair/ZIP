<div class="desktop-2 tablet-1 mobile-3">
  <div id="collection-sidebar">
    <ul class="accordion-side-menu">    
      <label>{{ settings.collection_linklist_1_title }}</label>
      {% for link in linklists[settings.collection_side_1].links %}
      {% capture child_list_handle %}{{ link.title | handleize }}{% endcapture %}
      {% if linklists[child_list_handle] and linklists[child_list_handle].links.size > 0 %}
      <li class="accordion-toggle">{{ link.title }}</li>
      <div class="accordion-content">
        <ul class="sub">
          {% for l in linklists[child_list_handle].links %}
          {% capture child_list_handle %}{{ l.title | handleize }}{% endcapture %}
          {% if linklists[child_list_handle] and linklists[child_list_handle].links.size > 0 %} 
          <div class="accordion-toggle2">{{ l.title }}</div>
          <div class="accordion-content2">
            <ul class="sub">
              {% for l in linklists[child_list_handle].links %}
              <li><a href="{{ l.url }}">{{ l.title }}</a></li>
              {% endfor %}
            </ul>
          </div>
          {% else %}
          <li><a href="{{ l.url }}">{{ l.title }}</a></li>
          {% endif %}
          {% endfor %}
        </ul>
      </div>
      {% else %}
      <li>{{ link.title | link_to: link.url }}</li>
      {% endif %}
      {% endfor %}  
