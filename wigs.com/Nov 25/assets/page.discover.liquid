	{% if article.image %} <div><a href='{{article.url}}'><img src='{{ article.image.src | img_url: 'medium' }}' ></a></div> {% endif %}
     {{ article.title | link_to: article.url }}
	</li>
	{%- endif -%}  	
  {%- endfor -%}
</ul>
